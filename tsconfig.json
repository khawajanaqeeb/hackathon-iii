{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // Disallow JavaScript files for better type safety
    "skipLibCheck": true,
    "strict": true, 
    "noEmit": true, 
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      { "name": "next" }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts" 
  ],
  "exclude": [
    "node_modules", 
    "**/*.js", 
    "**/*.jsx" // Exclude JavaScript files if not necessary
  ]
}